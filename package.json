{
  "template": {
    "inheridFrom": [
      "arlac77/template-github"
    ],
    "mergers": [
      {
        "type": "YAML",
        "pattern": ".github/workflows/*.yml",
        "options": {
          "messagePrefix": "chore(actions): ",
          "mergeHints": {
            "*": {
              "removeEmpty": true
            },
            "*.node-version": {
              "scope": "deps",
              "merge": "mergeVersionsPreferNumeric"
            },
            "*.steps": {
              "key": "id|name|uses|run"
            }
          }
        }
      },
      {
        "type": "Readme",
        "pattern": "README.md",
        "options": {
          "badges": [
            {
              "name": "Build Action Status",
              "icon": "https://img.shields.io/endpoint.svg?url=https%3A%2F%2Factions-badge.atrox.dev%2F{{github.user}}%2F{{github.repo}}%2Fbadge&style=flat",
              "url": "https://actions-badge.atrox.dev/{{github.user}}/{{github.repo}}/goto",
              "order": 0.21
            }
          ]
        }
      }
    ],
    "usedBy": [
      "Kronos-Integration/interceptor-line-header",
      "Kronos-Integration/interceptor-line-parser",
      "Kronos-Integration/interceptor-line-tokenizer-csv",
      "Kronos-Integration/interceptor-line-tokens2obj",
      "Kronos-Integration/interceptor-message-handler",
      "Kronos-Integration/interceptor-object-data-processor-row",
      "Kronos-Integration/message",
      "Kronos-Integration/service",
      "Kronos-Integration/service-admin",
      "Kronos-Integration/service-authenticator",
      "Kronos-Integration/service-bullmq",
      "Kronos-Integration/service-consul",
      "Kronos-Integration/service-health-check",
      "Kronos-Integration/service-http",
      "Kronos-Integration/service-ldap",
      "Kronos-Integration/service-logger-gelf",
      "Kronos-Integration/service-swarm",
      "Kronos-Integration/service-systemd"
    ]
  }
}
